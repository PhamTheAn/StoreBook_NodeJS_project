<%- include('../layouts/header.ejs')%>
    <form  enctype="multipart/form-data" action="/admin/products/add" method="POST" class="mt-3" style="width: 80%; margin: auto;">
        <div class="mb-3">
            <label class="form-label">Name Product</label>
            <input type="text" name="productName" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Description Product</label>
            <textarea class="form-control" name="productDescription" rows="2" cols="100"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" name="productPrice" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" name="productAuthor" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">CategoryID</label>
            <input type="text" name="productCategoryID" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input type="text" name="productGenre" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="productImage" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <%- include('../layouts/footer.ejs')%>