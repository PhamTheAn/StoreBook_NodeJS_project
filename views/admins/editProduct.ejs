<%- include('../layouts/header.ejs')%>
    <form  enctype="multipart/form-data" action="/admin/products/edit/<%= product.id %>" method="POST" class="mt-3" style="width: 80%; margin: auto;">
        <div class="mb-3">
            <label class="form-label">Name Product</label>
            <input type="text" name="productName" class="form-control" value="<%= product.name_product %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Description Product</label>
            <textarea class="form-control" name="productDescription" rows="2" cols="100"><%= product.description %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" name="productPrice" class="form-control" value="<%= product.price %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" name="productAuthor" class="form-control" value="<%= product.author %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input type="text" name="productGenre" class="form-control" value="<%= product.genre %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="productImage" class="form-control" value="<%= product.genre %>" >
            <% if (product.image) { %>
                <p class="mt-3">Current Image: <%= product.image %></p>
                <img class="mt-3" src="<%= product.image %>" alt="Product Image" style="max-width: 150px; max-height: 150px;">
            <% } %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <%- include('../layouts/footer.ejs')%>